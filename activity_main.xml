<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:background="#000000"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#000000"
        android:orientation="horizontal"
        android:id="@+id/TopOuterBlock"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:id="@+id/TopFirstBlock"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Enter Card Balance($)"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:textIsSelectable="false" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Interest Rate(Yearly)"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:textIsSelectable="false" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Enter Minimum Payment($)"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:textIsSelectable="false" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/TopSecondBlock"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_weight="1.5"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editText_CardBalance"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:background="#ffffff"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp" />

            <EditText
                android:id="@+id/editTextYearlyInt"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:background="#ffffff"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp" />

            <EditText
                android:id="@+id/editTextMinPmnt"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:background="#ffffff"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#000000"
        android:orientation="horizontal"
        android:id="@+id/MidOuterBlock"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:id="@+id/MidFirstBlock"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Final Card Balance($)"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:textIsSelectable="false" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Months Remaining"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:textIsSelectable="false" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Interest Paid Will Be($)"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:textIsSelectable="false" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/MidSecondBlock"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_weight="1.5"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editText_FinalBalance"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:singleLine="true"
                android:textColor="#ffffff"
                android:background="#ffffff"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp" />

            <EditText
                android:id="@+id/editText_MonthRemain"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:textColor="#ffffff"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp" />

            <EditText
                android:id="@+id/editTexInterestPaid"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:background="#ffffff"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#000000"
        android:orientation="vertical"
        android:layout_marginTop="10dp">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="COMPUTE" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CLEAR"/>
    </LinearLayout>


</LinearLayout>
